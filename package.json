{
  "name": "bluecollarclicks-website",
  "version": "1.0.0",
  "description": "Blue Collar Clicks landing page with email collection",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "build": "npm run clean && npm run copy && npm run minify",
    "clean": "rm -rf dist",
    "copy": "mkdir -p dist && cp -r images dist/ && cp index.html dist/ && cp styles.css dist/",
    "minify": "npm run minify:html && npm run minify:css",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true dist/index.html -o dist/index.html",
    "minify:css": "cleancss -o dist/styles.css dist/styles.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatmarcusdid/bluecollarclicks-website.git"
  },
  "keywords": [
    "landing-page",
    "static-website",
    "email-collection"
  ],
  "author": "Marcus White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whatmarcusdid/bluecollarclicks-website/issues"
  },
  "homepage": "https://github.com/whatmarcusdid/bluecollarclicks-website#readme",
  "devDependencies": {
    "prettier": "^3.0.0",
    "html-minifier": "^4.0.0",
    "clean-css-cli": "^5.6.2"
  }
} 